{% extends "SiteBlogBundle::layout.html.twig" %}

{% block title %}
{{'blog.legal.head'|trans }} | {{ parent() }}
{% endblock %}

{% block site_body %}
<div class="container-login">
<div class="container marketing"> <!-- / pour centrer -->
  <!-- Page Content -->

<h1>{{'blog.legal.title'|trans }}</h1>
</br>

<ul class="nav nav-pills nav-stacked">
  {% for article in listArticles %}
    <li>
       <a href="{{ path('blog_show', {'slug': article.slug}) }}"> <h1>{{ article.title }}</h1>
  </br> </a>

       {{article.content}}
    </li>

  {% endfor %}
</ul>
</div>

{% endblock %}